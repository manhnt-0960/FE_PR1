footer
  .wrapper
    .footer-top
      img(src='./assets/images/footer-top-brand.png')
    .footer-middle
      .footer-middle__info
        p Thông tin
        ul
          each item in footerInfo
            li
              a(href='#')= item
      .footer-middle__buy
        p Mua hàng
        ul
          each item in footerBuy
            li
              a(href='#')= item
      .footer-middle__email
        p Gửi Email
        p Gửi email cho chúng tôi để được hỗ trợ
        form
          input(placeholder='Enter your email')
          .form-email-submit
            button.button__submit Gửi
            .form-email-submit__tritangle
        .clear
        .footer-middle__social
          ul
            each item in footerSocial
              li
                i(class=item)
      .footer-middle__contact
        p Liên hệ
        ul
          each item in footerContact
            li
              i(class=item.icon)
              a(href='#')= item.text
  .footer-bottom
    .wrapper
      .footer-bottom__copyright
        p © Copyright 2008-2014 DKT Technology JSC
      .footer-bottom__card
        img(src='./assets/images/footer-bottom-card.png')

