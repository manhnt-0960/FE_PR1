        .content-right
          .image
            +image('detail-content-right.png')
          p Rượu nho
    section.salest-products
      .wrapper
        .salest-products__title
          +title-main('SẢN PHẨM LIÊN QUAN')
        .salest-products__slide
          input#pre-relate-product(type='radio', name='relate-product')
          input#next-relate-product(type='radio', name='relate-product')
          .slide__full-images--hidden
            .slide__full-images
              each product in indexNewProduct
                +product(product.link, product.title, product.price1, product.price2)
          .slide__arrow
            .slide__arrow__left
              label(for='pre-relate-product')
                i.fa.fa-arrow-left
            .slide__arrow__right
              label(for='next-relate-product')
                i.fa.fa-arrow-right
